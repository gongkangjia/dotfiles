alias ssh="ssh -Y"

alias rm="trash-put"
alias vi="nvim"

# tmux
alias tl="tmux ls"
alias ta="tmux attach -t"
alias tn="tmux new -s"

#neovim
type nvim >/dev/null 2>&1
if [ $? -eq 0 ]; then
    alias vi="nvim"
fi

#trash-put
type trash-put >/dev/null 2>&1
if [ $? -eq 0 ]; then
    alias rm="trash-put"
fi
